Subject: [PATCH] Add environment variable LIBCLANG_LIBRARY_FILE to set
 Config.library_file.

---
 python/clang/cindex.py | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/python/clang/cindex.py b/python/clang/cindex.py
index db8919c..50aceb8 100644
--- a/python/clang/cindex.py
+++ b/python/clang/cindex.py
@@ -3984,7 +3984,7 @@ def register_functions(lib, ignore_errors):
 
 class Config(object):
     library_path = os.environ.get("LIBCLANG_LIBRARY_PATH", os.path.join(os.path.dirname(os.path.realpath(__file__)), "native"))
-    library_file = None
+    library_file = os.environ.get("LIBCLANG_LIBRARY_FILE", None)
     compatibility_check = True
     loaded = False
 
